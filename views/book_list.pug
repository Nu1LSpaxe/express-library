extend layout 

block content 
  h1.text-center.mt-5.mb-3= title 

  if book_list.length 
    ul.list-group.list-group-flush
      each book in book_list 
        li.list-group-item
          div.d-flex.justify-content-between
            a(href=book.url) #{book.title} 
            | #{book.author.name}
  else
    p There are no books.