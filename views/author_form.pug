extends layout

block content
  h1.text-center.mt-5.mb-3=title

  form(method='POST')
    div.form-floating.mb-3
      input#first_name.form-control(class='mb-2' type='text', placeholder='First name (Christian)' name='first_name' required value=(undefined===author ? '' : author.first_name) )
      label(for='first_name') First Name
    div.form-floating.mb-3
      input#last_name.form-control(class='mb-2' type='text', placeholder='Last name (Surname)' name='last_name' required value=(undefined===author ? '' : author.last_name))
      label(for='last_name') Last Name
    div.form-floating.mb-3
      input#date_of_birth.form-control(class='mb-2' type='text' onfocus=(`this.type='date'`) name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth) )
      label(for='date_of_birth') Date of birth

    div.d-flex.justify-content-center
      button.btn.btn-primary.col-2(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
