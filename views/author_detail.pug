extends layout

block content

  h1.text-center.mt-5.mb-3 Author: #{author.name}
  p Date: #{author.date_of_birth_formatted}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    if author_books.length
      dl
        each book in author_books
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}
    else
      p This author has no books.

  div.d-flex.justify-content-around.p-3
    a.btn.btn-danger(role='button' href=author.url+'/delete') Delete Author
    a.btn.btn-warning(role='button' href=author.url+'/update') Update Author
